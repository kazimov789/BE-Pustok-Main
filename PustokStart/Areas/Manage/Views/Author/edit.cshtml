@model Author
@{
    ViewData["Title"] = "Create";
}
<div class="row justify-content-center">
    <div class="col-md-8">
        <h1>Edit</h1>
        <form method="post" asp-action="edit" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="FullName"></label>
                <input type="text" class="form-control" asp-for="FullName">
                <span asp-validation-for="FullName"></span>
                <input type="file" class="form-control" asp-for="ImageFile" />
                <span asp-validation-for="ImageFile"></span>
                @if(Model.Image!=null){
                  @* <img width="100" src="~/uploads/authors/@Model.Image" />  *@
                    <div class="img-box col-md-6" style="position:relative;margin-right:14px;margin-top:50px">
                        <span class="remove-icon">x</span>
                        <input type="hidden" value="@Model.Id" asp-for="ImageCheck">
                        <img width="200" src="~/uploads/authors/@Model.Image" />
                    </div>

            }
                
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>